{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@types/express": ["src/types/express.d.ts"]
    },
    "rootDir": "src"
  },
  "include": ["src/**/*", "prisma/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}